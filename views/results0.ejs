<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../views/partials/head %>
</head>

<body class="container">

    <header>
        <% if(!locals.user){ %>
            <% include ../views/partials/header  %>
                <% console.log(locals); %>
                    <% }else{ %>
                        <% include ../views/partials/logHeader  %>
                            <% } %>
    </header>

    <main>
        <div class="jumbotron">
            <h1>
                Here are the results of this poll
            </h1>

            <h2> Title of Poll:
                <%= titleOfPoll %>
            </h2>
            <br><br>
            <h3 style="underline: true;">Results</h3>

            <div id="piechart" style="margin-left: 25%; margin-top:; border:black solid 2px; max-width:505px;"></div>

            <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

            <script type="text/javascript">
                // Load google charts
                google.charts.load('current', {
                    'packages': ['corechart']
                });
                google.charts.setOnLoadCallback(drawChart);

                // Draw the chart and set the chart values
                function drawChart() {
                    var data = google.visualization.arrayToDataTable([
                        ['Choice', 'Votes'],

                        <%  for(var i = 0; i< pollVotes.length; i++){ %> ['<%=votingOptions[i]%>', <%=pollVotes[i]%>]
                        <%if(i != pollVotes.length - 1 ){%>, <%}%>
                        <%        } %>

                    ]);

                    // Optional; add a title and set the width and height of the chart
                    var options = {
                        title: <% titleOfPoll %>,
                        width: 500,
                        height: 500
                    };

                    // Display the chart inside the <div> element with id="piechart"
                    var chart = new google.visualization.PieChart(document.getElementById('piechart'));
                    chart.draw(data, options);
                }

                console.log(<% titleOfPoll %>);

            </script>


        </div>


    </main>

    <footer>
        <% include ../views/partials/footer %>
    </footer>

</body>

</html>
